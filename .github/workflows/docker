# This GitHub Actions workflow builds and tests the TraxAct application
# It runs on push and pull requests targeting the master branch.
# The workflow sets up the .NET environment, installs the Java Development Kit (JDK), and builds the project.

name: Docker

# Target pull and push requests to master branch
on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master   

# Execute the job on a Windows runner
jobs:
  build:
    runs-on: windows-latest  

# Checkout the repository code
    steps:
    - name: Checkout code  
      uses: actions/checkout@v2  
      
    - name: Setup .NET  
      uses: actions/setup-dotnet@v1  
      with:
      # .NET version
        dotnet-version: '7.0.x'  

    # Install the JDK
    - name: Install JDK  
      uses: actions/setup-java@v2 
      with:
      # Specify distribution and version
        distribution: 'adopt'  
        java-version: '11'     

    # Build the project
    - name: Build  
      run: |  
        dotnet workload restore  # Restore .NET workloads
        dotnet restore  # Restore NuGet packages
        dotnet workload install maui-android maui-windows  # Install .NET MAUI workloads for Android and Windows
        dotnet build TraxAct/TraxAct.sln --configuration Debug  # Build the solution with Debug configuration without restoring packages

    - name: Build Docker image
      run: docker build -t traxact-app .

    - name: Push Docker image to registry
      run: |
        echo ${{ secrets.DOCKER_PASSWORD }} | docker login -u ${{ secrets.DOCKER_USERNAME }} --password-stdin
        docker tag traxact-app ${{ secrets.DOCKER_USERNAME }}/traxact-app:latest
        docker push ${{ secrets.DOCKER_USERNAME }}/traxact-app:latest
