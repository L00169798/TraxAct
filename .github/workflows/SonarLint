name: SonarLint

on:
  push:
    branches:
      - master 
  pull_request:
    branches:
      - master 

jobs:
  sonarlint:
    name: SonarLint
    runs-on: windows-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      # Setup .NET SDK
      - name: Setup .NET
        uses: actions/setup-dotnet@v1
        with:
          dotnet-version: '7.0.x' 

      # Build and restore
      - name: Restore dependencies
        run: dotnet restore
      
      - name: Build
        run: dotnet build --configuration Release --no-restore

     # Run SonarLint
     - name: Run SonarLint in Visual Studio
        run: |
      
