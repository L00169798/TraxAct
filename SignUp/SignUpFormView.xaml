<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TraxAct.SignUp"
             x:DataType="viewModels:SignUpViewModel"
             x:Class="TraxAct.SignUp.SignUpFormView">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label FontAttributes="Bold" Text="Email" TextColor="Black"/>
            <Entry Margin ="0,2,0,0" Text="{Binding Email}" TextColor="Black"/>
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="Password" TextColor="Black"/>
            <Entry Margin ="0,2,0,0" 
                   IsPassword="True"
                   Text="{Binding Password}" 
                   TextColor="Black"/>
        </VerticalStackLayout>


        <VerticalStackLayout Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="Confirm Password" TextColor="Black"/>
            <Entry Margin ="0,2,0,0" 
                   IsPassword="True"
                   Text="{Binding ConfirmPassword}" 
                   TextColor="Black"/>
        </VerticalStackLayout>

        <Button Text="Sign Up" 
                Margin="0,25,0,0"
                Command="{Binding SignUpCommand}"
                HorizontalOptions="Start" />


    </VerticalStackLayout>
</ContentView>
