<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraxAct.Views.SignUpPage"
             xmlns:signup="clr-namespace:TraxAct.SignUp"
             Background="White"
             Title="SignUp">

    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="800">
            <Label Text="Sign Up" FontSize="Large" TextColor="Black"/>
            <signup:SignUpFormView Margin="0,25,0,0" BindingContext="{Binding SignUpViewModel}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
