<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraxAct.Views.EventPage"
             xmlns:viewModels="clr-namespace:TraxAct.ViewModels"
             xmlns:models="clr-namespace:TraxAct.Models"
             x:DataType="viewModels:EventViewModel"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>

            <ListView x:Name="EventListView"
                      ItemsSource="{Binding ExerciseOptions}"
                      SelectedItem="{Binding SelectedExerciseOption}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" TextColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
